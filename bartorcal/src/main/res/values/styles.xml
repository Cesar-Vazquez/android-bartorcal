<resources>

    <color name="Background">#C8C8C8</color>
    <color name="Row1">#F1F1F1</color>
    <color name="Row2">#FFFFFF</color>

    <color name="Pie1">#ff101010</color>
    <color name="Pie2">#ffffe200</color>
    <color name="PieText1">#fff8f3f4</color>
    <color name="PieText2">#ff000000</color>

    <style name="AppTheme" parent="@android:style/Theme.Material">
    </style>

    <style name="Layout">
        <item name="android:background">@color/Background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:buttonStyle">@style/Button</item>
    </style>

    <style name="Button" parent="Text1">
        <item name="android:color">#FF0000</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Text">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#AAAAAA</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
    </style>

    <style name="Text1" parent="Text">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text2" parent="Text">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text3" parent="Text">
        <item name="android:textSize">10sp</item>
    </style>
</resources>
